
#
# tracker
#

include "RecoLocalTracker/Configuration/data/RecoLocalTracker_Cosmics.cff"
include "RecoTracker/Configuration/data/RecoTrackerP5.cff"
include "RecoVertex/BeamSpotProducer/data/BeamSpot.cff"


sequence trackerCosmics = {offlineBeamSpot,  trackerlocalreco, tracksP5}
sequence trackerCosmics_woPixels = {offlineBeamSpot,striptrackerlocalreco, tracksP5}


#
### calorimeters
#
include "RecoLocalCalo/Configuration/data/RecoLocalCalo_Cosmics.cff"
include "RecoEcal/Configuration/data/RecoEcalCosmics.cff"

sequence caloCosmics = { calolocalreco, ecalClusters }


#
### muons
#
include "RecoLocalMuon/Configuration/data/RecoLocalMuonCosmics.cff"
include "RecoMuon/Configuration/data/RecoMuonCosmics.cff"

sequence muonsLocalRecoCosmics = {muonlocalreco & muonlocalrecoNoDrift}
sequence muonsCosmics = {muonRecoGR}

#
### jets and met
#
include "RecoJets/Configuration/data/RecoCaloTowersGR.cff"
include "RecoJets/Configuration/data/RecoJetsGR.cff"
include "RecoMET/Configuration/data/RecoMET.cff"

sequence jetsCosmics = {recoCaloTowersGR, recoJetsGR}
sequence metrecoCosmics= {metreco}


sequence localReconstructionCosmics = {trackerCosmics, caloCosmics, muonsLocalRecoCosmics}

sequence reconstructionCosmics = { localReconstructionCosmics, muonsCosmics ,  jetsCosmics, metrecoCosmics}

